{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "sourceMap": true,
        "noEmit": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "allowImportingTsExtensions": true,
        "paths":{
            "@/*": ["./src/*"]
        },
    },
    "include": [
        "src/**/*.ts"
    ],
    "types": [
        "vite/client"
    ],
    "exclude": [
        "node_modules",
        "other"
    ]
}
